<!--This view uses model controller and its properties-->
@model Category


<!--a form that deletes with action that refers to the action in controller-->
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <!--Tag helper - validation summary appears at the top of the view-->
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <!--uses property from model Category-->
            <label asp-for="Name"></label>
            <!--deletes an object of class category -->
            <input asp-for="Name" disabled class="form-control" />              
        </div>

        <div class="mb-3">
            <!--uses property from model Category-->
            <label asp-for="DisplayOrder"></label>
            <!--deletes an object of class category -->
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <!--like a back button link-->
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

<!--Validation on client side with the partial view, _ValidationScriptsPartial-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
